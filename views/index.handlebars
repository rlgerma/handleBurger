<h1>BBBBBBurgers!</h1>
<div class="wantTry">
  
<h2>Burgers to be eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless yum}}
      {{> burgers/burger-block yum=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<h2>Burgers That I Tried!</h2>

<ol>
  <div class="tried">    
  {{#each burgers}}
    {{#if yum}}
      {{> burgers/burger-block yum=false}}
    {{/if}}
  {{/each}}
  </div>
</ol>
  
<div class="toEat">
<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add burger</button>
  <div class="form-group">
    <label for="yum"></label><br>
    <input type="radio" name="yum" value="0" checked> Yum!<br>
  </div>
</div>
</form>

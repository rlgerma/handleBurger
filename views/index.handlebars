<div class="container-left">
  <div class="boxtitle">Burgers to be eaten</div>
  <ul>
    {{#each burgers}}
    {{#unless yum}}
    {{> burgers/burger-block yum=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>
</div>
<div class="container-right">

  <div class="boxtitle">Burgers That I Tried!</div>
  <ol>
    {{#each burgers}}
    {{#if yum}}
    {{> burgers/burger-block yum=false}}
    {{/if}}
    {{/each}}
  </ol>
</div>
<div class="container-bottom">
  <div class="boxtitle">Add a burger</div>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit" onclick="show">Add burger</button>
    <div class="hide">
      <div class="form-group">
        <label for="yum"></label><br>
        <input type="radio" name="yum" value="0" checked><br>
      </div>
    </div>
  </form>
</div>